@page
@model Firmeza.Web.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Sales";
}

<h1>Sales</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sales) {
        <tr>
            <td>@item.SaleDate</td>
            <td>@item.Customer?.FirstName @item.Customer?.LastName</td>
            <td>@item.Total</td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
